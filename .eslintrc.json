{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["standard", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "indent": ["error", "tab"],
    "linebreak-style": ["error", "linux"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"]
  }
}
